# Normalize all text files to LF in the repo
* text=auto

# Force LF for source code files
*.js     text eol=lf
*.ts     text eol=lf
*.jsx    text eol=lf
*.tsx    text eol=lf
*.css    text eol=lf
*.html   text eol=lf
*.json   text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
